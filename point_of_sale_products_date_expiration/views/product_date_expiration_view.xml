<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="products_products_expirate_date_view" model="ir.ui.view">
            <field name="name">Products Products expirate date</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
            	<field name='lst_price' position="before">
                    <field name='state_type_product' invisible="1"/>
            		<field name='date' attrs="{'invisible': [('state_type_product', '!=', True)]}"/>              
            	</field>
            </field>
        </record>

        <record id="products_template_kanban_date_view" model="ir.ui.view">
            <field name="name">Products Template Kanban date</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_kanban_view"/>
            <field name="arch" type="xml">
                <field name="lst_price" position="after">
                    <field name="type"/>
                </field>
                <ul position="inside">
                    <li t-if="record.type.raw_value == 'product'">Expiration Date:
                        <field name="date"/>
                    </li>
                </ul>
            </field>
        </record>

    </data>
</openerp>