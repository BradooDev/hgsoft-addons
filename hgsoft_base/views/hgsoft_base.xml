<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="assets_backend" name="hgsoft_base assets" inherit_id="web.assets_backend">
            <xpath expr="." position="inside">
                <link rel="stylesheet" href="/hgsoft_base/static/src/css/hgsoft_base.css"/>
            </xpath>
        </template>
        <template id="trust_login_layout" name="Login Layout" inherit_id="web.login_layout">
            <t t-set="head">
                <link href="/hgsoft_base/static/src/css/hgsoft_base.css" rel="stylesheet"/>
            </t>
        </template>
        <template id="hgsoft_menu_secondary" name="" inherit_id="web.menu_secondary">
            <xpath expr="div[@class='oe_footer']" position="inside">
                <div class="oe_footer" style="float:left;width:100%;height:100%;">
                    Suporte via <a href="http://www.hgsoft.com.br" target="_blank"><span style="color:#dc1906">HGSOFT</span></a>
                </div>
            </xpath>
        </template>
    </data>
</openerp>
